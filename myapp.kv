<Output>:
    on_enter: root.update_graph(), root.update_stat()
    BoxLayout:
        id: graph
        size_hint_y: .7
        pos_hint: {"top":1}
        padding: 10, 10, 10, 10
    BoxLayout:
        size_hint_y: .6
        Label:
            text: "Legende"
        Label:
            text: "Netto-Punkte"
            color: 1, 1, 0, 1
        Label:
            text: "#Schläge"
            color: 1, 0, 0, 1
    BoxLayout:
        size_hint_y: .4
        Label:
            text: "#Schläge"
        Label:
            text: "Netto-Punkte"
        Label:
            text: "#Spiele"
    BoxLayout:
        size_hint_y: .3
        Label:
            id: lbl_schlag
            text: "-"
        Label:
            id: lbl_punkt
            text: "-"
        Label:
            id: lbl_spiel
            text: "-"
    BoxLayout:
        size_hint_y: .1
        Button:
            text: "Neue Runde"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current ='runde'
        Button:
            text: "Neuer Platz"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current ='platz' 

<RundeScreen>:
    on_leave: root.clear_input()
    BoxLayout:
        size_hint_y: .7
        pos_hint: {"top":1}
        orientation: "vertical"
        padding: 10, 10, 10, 10

        BoxLayout:
            padding: 10, 10, 10, 10
            MDRaisedButton:
                text: "Datum"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: datum_input
                height: root.height*0.1
                size_hint: None, None
                on_release: root.show_date_picker()
                on_text: 

        BoxLayout:
            Spinner:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}            
                id: platz_spinner
                text: "Gespielter Golfplatz"
                values: root.get_course()

        BoxLayout:
            Spinner:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: variante_spinner
                text: "9 oder 18-Löcher"
                values: ["9", "18"]

        BoxLayout:
            Spinner:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: abschlag_spinner
                text: "Abschlag"
                values: ["Herren-Gelb","Damen-Rot"] 

        MDTextField:
            id: schlag_input
            line_color_focus: "green"
            hint_text: "Benötigte Schläge"
            input_type: "number"
            input_filter: "int"

        MDTextField:
            id: punkte_input
            line_color_focus: "green"
            hint_text: "Netto Punkte"
            input_type: "number"
            input_filter: "int"

        MDTextField:
            id: hcp_input
            line_color_focus: "green"
            hint_text: "Handicap"
            input_type: "number"
            input_filter: "int"
                                                                            
    BoxLayout:
        size_hint_y: .1
        Button:
            text: "Submit"
            on_press: 
                root.submit()
                root.manager.transition.direction = 'left'
                root.manager.current ='output'
        Button:
            text: "Zurück"
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current ='output'

<PlatzScreen>:
    on_leave: root.clear_input()
    BoxLayout:
        id: runde_input
        size_hint_y: .7
        orientation: "vertical"
        pos_hint: {"top":1}

        MDTextField:
            id: course_name
            line_color_focus: "green"
            hint_text: "Name Golfplatz"

        MDTextField:
            id: course_par
            line_color_focus: "green"
            hint_text: "Kurs Par"
            input_type: "number"
            input_filter: "int"

        Spinner:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            id: variante_spinner
            text: "9 oder 18-Löcher"
            values: ["9", "18"]

        MDTextField:
            id: course_rating_m
            line_color_focus: "green"
            hint_text: "Kurs Rating Herren-Gelb"
            input_type: "number"
            input_filter: "float"

        MDTextField:
            id: course_rating_w
            line_color_focus: "green"
            hint_text: "Kurs Rating Damen-Rot"
            input_type: "number"
            input_filter: "float"

        MDTextField:
            id: course_slope_m
            line_color_focus: "green"
            hint_text: "Kurs Slope Herren-Gelb"
            input_type: "number"
            input_filter: "int"

        MDTextField:
            id: course_slope_w
            line_color_focus: "green"
            hint_text: "Kurs Slope Damen-Rot"
            input_type: "number"
            input_filter: "int"

    BoxLayout:
        size_hint_y: .1
        Button:
            text: "Submit"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current ='output'
        Button:
            text: "Zurück"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current ='output'